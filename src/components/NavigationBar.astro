---
import HamburgerMenu from "./HamburgerMenu.astro";
import ThemeToggler from "./ThemeToggler.astro";
---

<nav>

  <ul>
    <li>
      <a href="/" class="bold-text">Home</a>
    </li>

    <li>
      <a href="/philosophy">Philosophy</a>
    </li>

    <li>
      <a href="/geologicalsurvey">Geological Survey</a>
    </li>
  </ul>
  <ThemeToggler />
</nav>

<script>
  const { pathname } = window.location;
  const activeNavigationElement = document.querySelector(
    `nav a[href="${pathname}"]`
  );

  if (activeNavigationElement) {
    activeNavigationElement.classList.add("active");
  }
</script>

<style>
  nav {
    display: flex;
    align-items: center;
    padding: 1rem 0 3rem 0;
  }

  ul {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 0;
    margin: 0 auto 0 0;
  }

  nav li {
    opacity: 0.8;
    list-style: none;
    font-size: 0.95rem;
    display: flex;
    align-items:baseline;
  }

  a {
    padding: var(--small-button-height) 1rem;
    border-radius: var(--radius);
    text-decoration: none;
  }

  a.active {
  background: var(--grey-900);
  color: var(--background);
 }

</style>